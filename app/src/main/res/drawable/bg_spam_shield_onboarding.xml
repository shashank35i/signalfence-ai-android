<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#2F9BFF"
                android:centerColor="#2C95F5"
                android:endColor="#2687E6"
                android:type="linear" />
        </shape>
    </item>

    <!-- subtle vignette -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="520dp"
                android:centerX="0.5"
                android:centerY="0.45"
                android:startColor="#00FFFFFF"
                android:endColor="#1A000000" />
        </shape>
    </item>

</layer-list>
